{
  "name": "typescript-jest",
  "packageManager": "yarn@3.2.3",
  "scripts": {
    "build": "rm -rf build && tsc",
    "test": "jest --setupFiles dotenv/config --forceExit --detectOpenHandles"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.20",
    "jest": "^29.0.3",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.3"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  },
  "dependencies": {
    "express": "^4.18.1"
  }
}
